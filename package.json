{
    "name": "sfcc-sandboxes-manager",
    "description": "Salesforce B2C Commerce On-Demand Sandboxes Manager",
    "version": "0.0.1",
    "author": "Jordane BACHELET",
    "bugs": "https://github.com/jbachelet/sfcc-sandboxes-manager/issues",
    "dependencies": {
        "axios": "^0.21.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "eslint": "^7.15.0",
        "jsonwebtoken": "^8.3.0",
        "helmet": "^4.2.0",
        "husky": "^4.3.4",
        "lint-staged": "^10.5.3",
        "lwc-services": "^2.3.0",
        "prettier": "^2.2.1",
        "redis": "^3.0.2",
        "@salesforce-ux/design-system": "2.13.7",
        "lwc-webpack-plugin": "^0.3.0",
        "@lwc/synthetic-shadow": "^1.8.7"
    },
    "devDependencies": {
        "axios": "^0.21.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "eslint": "^7.15.0",
        "jsonwebtoken": "^8.3.0",
        "helmet": "^4.2.0",
        "husky": "^4.3.4",
        "lint-staged": "^10.5.3",
        "lwc-services": "^2.3.0",
        "prettier": "^2.2.1",
        "redis": "^3.0.2",
        "@salesforce-ux/design-system": "2.13.7",
        "lwc-webpack-plugin": "^0.3.0",
        "@lwc/synthetic-shadow": "^1.8.7"
    },
    "engines": {
        "node": "14.15.4",
        "npm": "6.4.1",
        "yarn": ">=1.22.0"
    },
    "homepage": "https://github.com/jbachelet/sfcc-sandboxes-manager",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "repository": "jbachelet/sfcc-sandboxes-manager",
    "scripts": {
        "build": "lwc-services build -m production -w webpack.config.js",
        "build:development": "lwc-services build -w webpack.config.js && npm run renameSlds",
        "renameSlds": "node ./build/renameSldsStyles.js",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "node src/server/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "lwc-services watch"
    }
}
